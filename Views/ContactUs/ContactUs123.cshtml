  @{
    ViewBag.Title = "ContactUs123";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



        <div class="content">
        <h1>Contact Us</h1>
        <p> For any complaint or suggestion Please Mail Me</p>
        <form id="contact" action="/ContactUs/SaveSuggestions" method="post">
          <div class="form_settings">
            <p><span>Name</span><input class="contact" type="text" name="Name" value="" placeholder="name" required/></p>
            <p><span>Email Address</span><input  class="contact" type="email" name="Email" value="" placeholder="xyz@abc.com"  /></p>
            <p><span>Message</span><textarea class="contact textarea" rows="5" cols="50" name="Message" placeholder="Message" required></textarea></p>
            <p style="padding-top: 15px"><span>&nbsp;</span><input class="submit" type="submit" name="contact_submitted" value="send" /></p>
          </div>
        </form>
      </div>
